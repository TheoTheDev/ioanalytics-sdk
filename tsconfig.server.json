{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist/server",
        "lib": ["ES2020"],
        "types": ["node"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/server"],
    "exclude": ["src/client", "node_modules", "dist"]
} 